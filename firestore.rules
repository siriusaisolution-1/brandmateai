rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    function isSelf(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function brandOwner(brandId) {
      return get(/databases/$(database)/documents/brands/$(brandId)).data.ownerId;
    }

    function isBrandOwner(brandId) {
      return isAuthenticated() && brandOwner(brandId) == request.auth.uid;
    }

    function chatSessionOwner(sessionId) {
      return get(/databases/$(database)/documents/chatSessions/$(sessionId)).data.userId;
    }

    function isChatSessionOwner(sessionId) {
      return isAuthenticated() && chatSessionOwner(sessionId) == request.auth.uid;
    }

    // M2 baseline: rules will be extended for workspaces/teams in future milestones.

    // Users can only read/create their own document and cannot change their own role/plan.
    match /users/{userId} {
      allow read, create: if isSelf(userId);
      allow update: if isSelf(userId)
                    && request.resource.data.role == resource.data.role
                    && request.resource.data.subscriptionPlan == resource.data.subscriptionPlan;
    }

    // Anyone authenticated can create a brand, as long as they set themselves as the owner.
    // Only the owner of a brand can read, update, or delete it.
    match /brands/{brandId} {
      allow read, update, delete: if isBrandOwner(brandId);
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
    }

    // Brand memories are tightly coupled to their parent brand and share the same ownership model.
    match /brandMemories/{memoryId} {
      allow get, list: if isBrandOwner(resource.data.brandId);
      allow update, delete: if isBrandOwner(resource.data.brandId);
      allow create: if isAuthenticated() && isBrandOwner(request.resource.data.brandId);
    }

    // Media assets are registered exclusively through the backend.
    match /mediaAssets/{assetId} {
      allow read: if isBrandOwner(resource.data.brandId);
      allow create, update, delete: if false;
    }

    // Upload sessions are backend only.
    match /mediaUploads/{uploadId} {
      allow read, write: if false;
    }

    // The scraped cache is read-only for clients, but writable by server-side functions.
    match /scrapedCache/{cacheId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only backend (admin SDK) can write
    }

    // Notifications are private to the owner.
    match /notifications/{notificationId} {
      allow read, update: if isSelf(resource.data.ownerId);
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
    }

    // Calendar events are private to the owner.
    match /calendarEvents/{eventId} {
      allow read, write: if isSelf(resource.data.ownerId);
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
    }

    // Content requests belong to a brand owner and are read-only from the client.
    match /contentRequests/{requestId} {
      allow read: if isBrandOwner(resource.data.brandId);
      allow create, update, delete: if false;
    }

    // Outputs are generated assets; only the brand owner can read them client-side.
    match /outputs/{outputId} {
      allow read: if isBrandOwner(resource.data.brandId);
      allow write: if false;
    }

    // Ad campaigns are private to the owner.
    match /adCampaigns/{campaignId} {
      allow read, write: if isSelf(resource.data.ownerId);
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
    }

    // M4 baseline: outputs su vezani za content requests i brandove.
    match /outputs/{outputId} {
      allow read: if isBrandOwner(resource.data.brandId);
      allow create, update, delete: if isBrandOwner(request.resource.data.brandId);
    }

    // M3 baseline: chat sessions and messages are private to the owner.
    match /chatSessions/{sessionId} {
      allow read, update, delete: if isChatSessionOwner(sessionId);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    match /chatMessages/{messageId} {
      allow read: if isChatSessionOwner(resource.data.sessionId);
      allow create: if isAuthenticated()
                    && (
                      (request.resource.data.role == 'user' && request.resource.data.userId == request.auth.uid)
                      || (request.resource.data.role == 'assistant' && isChatSessionOwner(request.resource.data.sessionId))
                    );
    }

    // M3 baseline: content requests are scoped to the brand owner.
    match /contentRequests/{requestId} {
      allow read, update, delete: if isBrandOwner(resource.data.brandId) && isSelf(resource.data.userId);
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && isBrandOwner(request.resource.data.brandId);
    }
  }
}