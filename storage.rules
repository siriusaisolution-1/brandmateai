rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Media assets must be uploaded via signed URLs issued by the backend.
    match /brands/{brandId}/{userId}/{allPaths=**} {
      allow read, write: if false;
    }

    // Deny any other direct client interaction.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
